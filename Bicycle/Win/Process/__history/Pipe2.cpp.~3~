//---------------------------------------------------------------------------
#include "Pipe2.h"
#include <sstream>

using namespace Bicycle;
//---------------------------------------------------------------------------
tstring genName()
{
  std::basic_stringstream<tchar> tss;
  tss<<TEXT("\\\\.\\pipe\\MyProccesPipe-")<<std::hex<<rand();
  return tss.str();
}
//---------------------------------------------------------------------------
/*             Server Pipe                                                 */
//---------------------------------------------------------------------------
ServerPipe2::ServerPipe2(const tstring& name)
  :NonCopyable(),
    name_(name),
    pipeMode_(PIPE_TYPE_BYTE),
    maxInstances_(1),
    defaultTimeOut_(DEFAULT_TIMEOUT),
    handle_(INVALID_HANDLE_VALUE)
{
  if(name_.empty())
    name_= genName();
}
//---------------------------------------------------------------------------
/*virtual*/ServerPipe2::~ServerPipe2()
{
  ulong ec;
  disconnect(ec);
  close();
}
//---------------------------------------------------------------------------
void ServerPipe2::create()
{
  close();
  ZeroMemory(&overlapped_, sizeof(overlapped_));

  SECURITY_ATTRIBUTES secAtt = { sizeof(SECURITY_ATTRIBUTES), 0, false };
  handle_ = CreateNamedPipe( name_.c_str(),
                             openMode_,
                             pipeMode_,
                             maxInstances_,
                             bufferSize_,
                             bufferSize_,
                             defaultTimeOut_,
                             &secAtt);

  if(handle_==INVALID_HANDLE_VALUE)
    throw SystemException("void ServerPipe::create() ");
}
//---------------------------------------------------------------------------
void ServerPipe2::connect()
{
  ulong success= ConnectNamedPipe(handle_,&overlapped_);
  if(!success)
  {
    ulong code= GetLastError();
    if(code==ERROR_IO_PENDING)
    {
      ulong waitResult= WaitForSingleObject(handle_,INFINITE);
      if(waitResult!=WAIT_OBJECT_0)
        throw SystemException("void ServerPipe::connect() ");
    }
    else
      throw SystemException("void ServerPipe::connect() ");
  }
}
//---------------------------------------------------------------------------
void ServerPipe2::setOpenMode(ulong mode)
{
  openMode_= mode;
}
//---------------------------------------------------------------------------
void ServerPipe2::setPipeMode(ulong mode)
{
  pipeMode_= mode;
}
//---------------------------------------------------------------------------
OVERLAPPED& ServerPipe2::overlapped()
{
  return overlapped_;
}
//---------------------------------------------------------------------------
HANDLE ServerPipe2::handle()const
{
  return handle_;
}
//---------------------------------------------------------------------------
bool ServerPipe2::isValide()const
{
  return handle_!=INVALID_HANDLE_VALUE;
}
//---------------------------------------------------------------------------
void ServerPipe2::disconnect(ulong& ec)
{
  if(isValide())
  {
    if(!DisconnectNamedPipe(handle_))
      ec= GetLastError();
  }
}
//---------------------------------------------------------------------------
void ServerPipe2::close()
{
  if(isValide())
  {
    CloseHandle(handle_);
    handle_= INVALID_HANDLE_VALUE;
  }
}
//---------------------------------------------------------------------------
void ServerPipe2::setBufferSize(ulong size)
{
  bufferSize_= size;
}
//---------------------------------------------------------------------------
tstring ServerPipe2::name()const
{
  return name_;
}
//---------------------------------------------------------------------------
/*                 Client Pipe                                             */
//---------------------------------------------------------------------------
ClientPipe2::ClientPipe2(const tstring& name)
  :NonCopyable(),
    name_(name),
    desiredAccess_(GENERIC_READ),
    sharedMode_(0),

    flagsAndAttributes_(0),
    handle_(INVALID_HANDLE_VALUE)
{
}
//---------------------------------------------------------------------------
/*virtual*/ClientPipe2::~ClientPipe2()
{
  close();
}
//---------------------------------------------------------------------------
void ClientPipe2::open()
{
  close();

  SECURITY_ATTRIBUTES secAtt= { sizeof(SECURITY_ATTRIBUTES), 0,true};
  handle_= CreateFile( name_.c_str(),
                       desiredAccess_,
                       0,
                       &secAtt,
                       OPEN_EXISTING,
                       flagsAndAttributes_,
                       NULL );
  if(handle_==INVALID_HANDLE_VALUE)
    throw SystemException("void ClientPipe2::open() ");
}
//---------------------------------------------------------------------------
void ClientPipe2::setFlagsAndAttributes(ulong flagsAndAttr)
{
  flagsAndAttributes_= flagsAndAttr;
}
//---------------------------------------------------------------------------
void ClientPipe2::setDesiredAccess(ulong access)
{
  desiredAccess_= access;
}
//---------------------------------------------------------------------------
void ClientPipe2::setSharedMode(ulong mode)
{
  sharedMode_= mode;
}
//---------------------------------------------------------------------------
tstring ClientPipe2::name()const
{
  return name_;
}
//---------------------------------------------------------------------------
void ClientPipe2::setName(const tstring& name)
{
  name_= name;
}
//---------------------------------------------------------------------------
void ClientPipe2::close()
{
  if(isValide())
  {
    CloseHandle(handle_);
    handle_= INVALID_HANDLE_VALUE;
  }
}
//---------------------------------------------------------------------------
HANDLE ClientPipe2::handle()const
{
  return handle_;
}
//---------------------------------------------------------------------------
bool ClientPipe2::isValide()const
{
  return handle_!=INVALID_HANDLE_VALUE;
}
//---------------------------------------------------------------------------
/*                      PipeReader                                         */
//---------------------------------------------------------------------------
PipeReader::PipeReader(ServerPipe2* pipe)
  :pipe_(pipe),
    timeOut_(INFINITE)
{
}
//---------------------------------------------------------------------------
PipeReader::~PipeReader()
{
}
//---------------------------------------------------------------------------
void PipeReader::setPipe(ServerPipe2* pipe)
{
  pipe_= pipe;
}
//---------------------------------------------------------------------------
void PipeReader::setTimeOut(ulong msecs)
{
  timeOut_= msecs;
}
//---------------------------------------------------------------------------
ulong PipeReader::read(char* data, ulong size, ulong& errorCode)
{    // Read From Pipe only
  errorCode= 0;
  ulong length= 0;
  BOOL success= ReadFile(pipe_->handle(),
                         data,
                         size,
                         &length,
                         &pipe_->overlapped() );

  if(!success)
  {
    errorCode= GetLastError();
    if (errorCode==ERROR_IO_PENDING)
    {
      ulong waitResult= WaitForSingleObject(pipe_->handle_, timeOut_);
      switch(waitResult)
      {
			case WAIT_OBJECT_0:  errorCode= Bicycle::ProcessError::Success;     break;
			case WAIT_TIMEOUT:   errorCode= Bicycle::ProcessError::WaitTimeOut; return 0;
			case WAIT_ABANDONED:
      case WAIT_FAILED:    errorCode= GetLastError();			return 0;
      default: break;
      }
    }
    else
      return 0;
  }

  success=
      GetOverlappedResult(pipe_->handle_,&pipe_->overlapped_,&length,false);

  if(!success)
    errorCode= GetLastError();

  pipe_->overlapped().Offset+= length;
  return length;
}
//---------------------------------------------------------------------------
/*                          PipeWriter                                     */
//---------------------------------------------------------------------------
PipeWriter::PipeWriter(ServerPipe2* pipe)
  :pipe_(pipe),
   timeOut_(INFINITE)
{
}
//---------------------------------------------------------------------------
PipeWriter::~PipeWriter()
{
}
//---------------------------------------------------------------------------
void PipeWriter::setPipe(ServerPipe2* pipe)
{
  pipe_= pipe;
}
//---------------------------------------------------------------------------
void PipeWriter::setTimeOut(ulong msecs)
{
  timeOut_= msecs;
}
//---------------------------------------------------------------------------
ulong PipeWriter::write(const char* data, ulong size, ulong& errorCode)
{
  // FIX: create another structure OVERLOPPAD and evetn for writting

  ulong length= 0;
  BOOL success= WriteFile(pipe_->handle(),
                          data,
                          size,
                          &length,
                          &pipe_->overlapped());

  if (!success)
  {
    errorCode= GetLastError();
    if(errorCode==ERROR_IO_PENDING)
    {
      ulong waitResult= WaitForSingleObject(pipe_->handle(),timeOut_);
      switch(waitResult)
      {
			case WAIT_OBJECT_0:  errorCode= Bicycle::ProcessError::Success;      break;
      case WAIT_TIMEOUT:   errorCode= Bicycle::ProcessError::WaitTimeOut; return 0;
      case WAIT_ABANDONED:
      case WAIT_FAILED:    errorCode= GetLastError();     return 0;
      default:break;
      }
    }
    else
      return 0;
  }

  success=
      GetOverlappedResult(pipe_->handle(),&pipe_->overlapped(),&length,FALSE);

  if(!success)
    errorCode= GetLastError();

  pipe_->overlapped().Offset+= length;
  return length;
}
